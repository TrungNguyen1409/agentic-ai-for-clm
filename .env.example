# LLM Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_PROVIDER=openai  # Options: openai, anthropic
LLM_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229

# AWS Configuration (for Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# LangFuse Configuration (Observability)
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_RETRIES=3
TIMEOUT=30

# Agent Configuration
ENABLE_RISK_AGENT=True
ENABLE_CLAUSE_AGENT=True
ENABLE_OBLIGATION_AGENT=True
ENABLE_DEPENDENCY_AGENT=True

# Vector Database
EMBEDDING_MODEL=text-embedding-3-small
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7

# Document Processing
OCR_ENABLED=True
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf,docx,doc,txt
